    <script>

        $(document).ready(function () {

            load_data();

            function load_data() {
                $.ajax({
                    url: "http://localhost:3000/admin1",
                    method: "POST",
                    data: { action: 'fetch' },
                    dataType: "JSON",

                    success: function (data) {
                        var html = '';

                        if (data.data.length > 0) {
                            for (var count = 0; count < data.data.length; count++) {
                                html += `
                            <tr>
                                <td>`+ data.data[count].admin_id + `</td>
                                <td>`+ data.data[count].admin_username + `</td>
                                <td>`+ data.data[count].admin_password + `</td>
                                <td><button type="button" class="btn btn-warning btn-sm edit" data-id="`+ data.data[count].admin_id + `">Edit</button>&nbsp;<button type="button" class="btn btn-danger btn-sm delete" data-id="` + data.data[count].admin_id + `">Delete</button></td>
                            </tr>
                            `;
                            }
                        }

                        $('#sample_data tbody').html(html);
                    }
                });
            }



            $('#add_data').click(function () {

                $('#dynamic_modal_title').text('Add Data');

                $('#sample_form')[0].reset();

                $('#action').val('Add');

                $('#action_button').text('Add');

                $('#action_modal').modal('show');

            });

            $('#sample_form').on('submit', function (event) {

                event.preventDefault();

                $.ajax({
                    url: "http://localhost:3000/admin1",
                    method: "POST",
                    data: $('#sample_form').serialize(),
                    dataType: "JSON",
                    beforeSend: function () {
                        $('#action_button').attr('disabled', 'disabled');
                    },
                    success: function (data) {
                        $('#action_button').attr('disabled', false);

                        $('#message').html('<div class="alert alert-success">' + data.message + '</div>');

                        $('#action_modal').modal('hide');

                        load_data();

                        setTimeout(function () {
                            $('#message').html('');
                        }, 5000);
                    }
                });

            });

            $(document).on('click', '.edit', function () {

                var admin_id = $(this).data('id');

                $('#dynamic_modal_title').text('Edit Data');

                $('#action').val('Edit');

                $('#action_button').text('Edit');

                $('#action_modal').modal('show');

                $.ajax({
                    url: "http://localhost:3000/admin1",
                    method: "POST",
                    data: { admin_id: admin_id, action: 'fetch_single' },
                    dataType: "JSON",
                    success: function (data) {
                        // $('#first_name').val(data.first_name);
                        $('#admin_username').val(data.admin_username);
                        $('#admin_password').val(data.admin_username);
                        // $('#jour_pub').val(data.jour_pub);
                        $('#admin_id').val(data.admin_id);
                        // $('#date_pub').val(data.date_pub);
                    }
                });

            });

            $(document).on('click', '.delete', function () {

                var admin_id = $(this).data('id');

                if (confirm("Are you sure you want to delete this data?")) {
                    $.ajax({
                        url: "http://localhost:3000/admin1",
                        method: "POST",
                        data: { action: 'delete', admin_id: admin_id },
                        dataType: "JSON",
                        success: function (data) {
                            $('#message').html('<div class="alert alert-success">' + data.message + '</div>');
                            load_data();
                            setTimeout(function () {
                                $('#message').html('');
                            }, 5000);
                        }
                    });
                }

            });


        });
    </script>

